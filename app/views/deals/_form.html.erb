<%= form_for @deal do |f| %>

	<% if @deal.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@deal.errors.count, "error") %>
				prohibited
				this deal from being saved:
			</h2>
			<ul>
				<% @deal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :vendor %><br>   
    <% @vendors.each do |vendor| %>
    	<%= select_tag(:vendor_id, options_for_select([vendor.name, vendor.id]))%>
 
    <% end %>
  </p>
 
  <p>
    <%= f.label :item %><br>
    <%= f.text_area :item %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
  <% end %>