<h1>Deals </h1>
<table>
	<tr>
		<th>Vendor</th>
		<th>Item</th>
		<th>Item Description</th>
		<th>Deal Price</th>
		<th colspan="3"></th>
	</tr>

<% @deals.each do |deal| %>
	<tr>
		<td><%= deal.vendor.name %></td>
		<td><%= deal.item.name%></td>
		<td><%= deal.item.description%></td>
		<td><%= deal.price %></td>
		<td><%= link_to 'Show', deal_path(deal)%></td>
		<td><%= link_to 'edit', edit_deal_path(deal)%></td>
		<td><%= link_to 'destroy', deal_path(deal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>


	<% end %>
</table>

<%= link_to "New Deal", new_deal_path %>